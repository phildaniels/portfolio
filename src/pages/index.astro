---
import BaseLayout from '../layouts/BaseLayout.astro';
import HorizontalCard from '../components/HorizontalCard.astro';
import ProjectsList from '../components/ProjectsList.astro';
import { getCollection } from 'astro:content';
import createSlug from '../lib/createSlug';

const collection = await getCollection('blog');
const posts = collection
	.filter((post) => post.data.pubDate < new Date())
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);

const mailTo = 'mailto:' + 'phil' + '@' + 'danielsdev' + '.cloud';
---

<BaseLayout sideBarActiveItemID="home">
	<div class="mt-5 pb-12">
  <div class="py-1 text-xl">Hey there ðŸ‘‹</div>
  <div class="text-5xl font-bold">I'm Phil Daniels</div>
  <div class="py-3 text-3xl font-bold">
    Full Stack, <i>Cloud First</i>, Software Engineer
  </div>
  <div class="py-2">
    <text class="text-justify text-lg">
      Located in <i>Windsor Colorado</i> currently employed at <i>Microsoft</i
      >, I use my passion for technology to create solutions that solve real
      world problems. I specialize in <b
        >Frontend / Fullstack Software Engineering</b
      >, with a focus on <i>Cloud First SaaS</i> solutions. I have experience with
      a wide range of technologies and am always looking to learn more. My expertise
      is in Cloud Technologies (<b>Azure, AWS, Firebase</b>), <b>AI</b> and <b
        >LLM</b
      >
      <i>products</i>, <b>Serverless Workflows</b>, and <b
        >Microservice Architecture</b
      >. Some tools and tech I consider myself an expert in include <b>React</b
      >, <b>Node</b>, <b>.NET</b>, and <b>Serverless Functions</b> (AWS Lambda,
      Cloudflare Workers, Azure Functions, etc.)
    </text>
  </div>
  <div class="mt-8">
    <a class="btn" href={mailTo} target="_blank"> Let's connect!</a>
  </div>
</div>

	<div>
		<div class="mb-2 w-full text-3xl font-bold">Some personal projects I'm working on {'</>'}</div>
	</div>

	<ProjectsList />

	<div>
		<div class="mb-5 mt-10 w-full text-3xl font-bold">Latest from blog</div>
	</div>

	{
		last_posts.map((post) => (
			<>
				<HorizontalCard
					title={post.data.title}
					img={post.data.heroImage}
					desc={post.data.description}
					url={'/blog/' + createSlug(post.data.title, post.slug)}
					target="_self"
					badge={post.data.badge}
				/>
				<div class="divider my-0" />
			</>
		))
	}
</BaseLayout>
