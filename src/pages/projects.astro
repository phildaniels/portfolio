---
import BaseLayout from '../layouts/BaseLayout.astro';
import HorizontalCard from '../components/HorizontalCard.astro';
import ProjectsList from '../components/ProjectsList.astro';
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
	<div>
		<div class="mb-5 w-full text-3xl font-bold">Projects I work on outside of work</div>
	</div>

	<ProjectsList />

	<div>
		<div class="mb-5 mt-10 w-full text-3xl font-bold">Recent Open Source Contributions</div>
	</div>

	<HorizontalCard
		title="Azure Logic Apps UX"
		desc="A cloud platform where you can create and run automated workflows with little to no code"
		url="https://github.com/Azure/LogicAppsUX"
		badge="FOSS"
	/>
	<div class="divider my-0"></div>
	<HorizontalCard
		title="Piral"
		desc="Framework for next generation web apps using micro frontends. ðŸš€"
		url="https://github.com/smapiot/piral"
		badge="FOSS"
	/>
	<div class="divider my-0"></div>
	<HorizontalCard
		title="Azure Docs"
		desc="Open source documentation of Microsoft Azure"
		url="https://github.com/MicrosoftDocs/azure-docs"
		badge="FOSS"
	/>
	<div class="divider my-0"></div>
</BaseLayout>
