---
const { title, start, end, organization, city, state } = Astro.props
---

<div class="flex">
	<div class="education__time">
		<span class="mt-1 block h-4 w-4 rounded-full bg-primary"></span>
		<span class="education__line block h-full w-[2px] translate-x-[7px] bg-primary"></span>
	</div>
	<div class="experience__data bd-grid mb-5 px-5">
		<h3 class="mb-1 font-semibold"><b>{title}</b>, <i>{organization}</i></h3>
		<span class="text-sm font-light">{start} - {end}, {city}, {state}</span>
		<p class="my-2 text-justify">
			<slot />
		</p>
	</div>
</div>
